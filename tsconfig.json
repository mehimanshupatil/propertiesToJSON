{
    "compilerOptions": {
        "target": "esnext",
        "module": "ESNext",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "resolveJsonModule": true,

        "declaration": true,
        "declarationDir": "./dist", 
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./src/index.ts"]
}
